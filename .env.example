# Database Configuration
DATABASE_URL=postgresql://aquaculture:aquaculture123@postgres:5432/aquaculture_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_PREDICTIONS=fish-predictions
KAFKA_TOPIC_IMAGES=fish-images
KAFKA_CONSUMER_GROUP=aquaculture-workers

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Security
SECRET_KEY=change-this-to-a-secure-random-string-in-production
JWT_SECRET=change-this-to-another-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# ML Configuration
MODEL_PATH=/app/models/fish_classifier_v1.pth
BATCH_SIZE=32
CONFIDENCE_THRESHOLD=0.5

# Monitoring
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development
DEBUG=true
